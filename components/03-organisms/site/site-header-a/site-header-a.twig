{{ attach_library('otsuka_design_system2022/organisms.site-header-a') }}

{% set header__base_class = 'header-a' %}
{# If `directory` is defined, set the path relative for Drupal.
 # Otherwise, set the path relative to the Component Library. #}
<header id="header" {{ bem(header__base_class) }}>
    <div {{ bem('inner', [], header__base_class) }}>
        <div {{ bem('primary', [], header__base_class) }}>
            <div {{ bem('branding', [], header__base_class) }}>
                {% block header__branding %}
                    {% include "@organisms/site/site-header-a/_site-header-a-branding.twig" %}
                {% endblock %}
            </div>
            <div {{ bem('menu', [], header__base_class) }}>
                {% block header__menu %}
                    {% include "@molecules/menus/main-menu-a/main-menu-a.twig" %}
                {% endblock %}
            </div>
        </div>
    </div>
</header>
