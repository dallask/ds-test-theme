{% set slider_quotes__base_class = 'paragraph-wrapper-accordion' %}
<div {{ bem(slider_quotes__base_class) }}>
    <div class="accordion">
        {% for item in items %}
            <div class="accordion-item">
                <div class="accordion-header" id="heading{{ item.field_item_number }}">
                    <button class="accordion-button" type="button"
                            data-bs-toggle="collapse"
                            data-bs-target="#collapse{{ item.field_item_number }}"
                            aria-expanded="true"
                            aria-controls="collapse{{ item.field_item_number }}">

                        {{ item.field_otsk_ds_title }}
                    </button>
                </div>
                <div id="collapse{{ item.field_item_number }}"
                     class="accordion-collapse collapse show"
                     aria-labelledby="heading{{ item.field_item_number }}"
                     data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        {{ item.field_otsk_ds_text }}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
