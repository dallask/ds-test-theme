{{ attach_library('otsuka_design_system2022/atoms.icons') }}

{% set base_class = base_class|default('icons-demo') %}

<div id="icons" {{ bem(base_class) }}>
  {% for item in items %}
    <div {{ bem('item', [], base_class) }}>
      {% include "@atoms/images/icons/_icon.twig" with {
        icon_name: item.value,
        icon_role: item.role,
        icon_title: item.title,
        icon_desc: item.desc,
        icon_decorative: item.decorative,
      } %}
      <pre>{{ item.value }}</pre>
    </div>
  {% endfor %}
</div>
<br>
